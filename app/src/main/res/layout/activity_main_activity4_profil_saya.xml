<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity4ProfilSaya">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profil_instagram"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/my_profile_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131"
        app:shapeAppearanceOverlay="@style/Circular" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="292dp"
        android:text="@string/nama_lengkap_urfan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/profil_instagram"
        app:layout_constraintStart_toStartOf="@+id/profil_instagram"
        app:layout_constraintTop_toTopOf="@+id/profil_instagram" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:text="@string/nim_urfan"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/profil_instagram"
        app:layout_constraintStart_toStartOf="@+id/profil_instagram"
        app:layout_constraintTop_toTopOf="@+id/profil_instagram"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="408dp"
        android:text="@string/tv_hubungi_saya"
        app:layout_constraintEnd_toEndOf="@+id/profil_instagram"
        app:layout_constraintStart_toStartOf="@+id/profil_instagram"
        app:layout_constraintTop_toTopOf="@+id/profil_instagram" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/profil_instagram"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/profil_instagram"
        app:layout_constraintTop_toTopOf="@+id/profil_instagram">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/click_instagram"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/instagram_logo"
            app:shapeAppearanceOverlay="@style/Circular" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/click_phone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/phone_logo" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/click_whatsapp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/logos_whatsapp_icon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>