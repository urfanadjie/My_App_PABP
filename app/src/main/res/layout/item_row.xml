<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_image_Morty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_name_morty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/cv_img"
        android:text="@string/name_string"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name_morty"
        android:layout_toEndOf="@+id/cv_img"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:text="@string/species_string" />

    <TextView
        android:id="@+id/item_species_morty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name_morty"
        android:layout_toEndOf="@+id/species"
        android:layout_marginStart="5dp"
        android:text="@string/human_string"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/species"
        android:layout_toEndOf="@id/cv_img"
        android:layout_marginStart="20dp"
        android:text="@string/alive_string"
        android:textSize="18sp" />



</RelativeLayout>